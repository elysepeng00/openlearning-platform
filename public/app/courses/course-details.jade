.container(ng-controller="mvCourseDetailCtrl")
    h1 {{ course.title}}
    .row
        .col-md-6
            h3(ng-show="course.featured") Featured
            h3 Published on {{course.published | date}}
        
        .col-md-6
            .panel.panel-primary
                .panel-heading Tags
                .panel-body
                    div(ng-repeat="tag in course.tags") {{tag}}                  
                              
    .well
        h3 About this course:
        
        form.form-horizontal(name="joinForm")

                .form-group
                    div {{course.content}}
                

                .form-group
                    .col-md-10.col-md-offset-2
                        .pull-right
                            button.btn.btn-primary(ng-click="join(course.title)") Join the course
                           

    
